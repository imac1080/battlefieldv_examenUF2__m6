<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="ada">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost/battlefieldv</property>
  <property name="hibernate.connection.username">root</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <mapping resource="practica/Bfplayer.hbm.xml"/>
  <mapping resource="practica/Class.hbm.xml"/>
  <mapping resource="practica/Device.hbm.xml"/>
  <mapping resource="practica/Weapon.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
